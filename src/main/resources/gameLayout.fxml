        <center>
            <GridPane fx:id="gamePanel" hgap="1" layoutX="40" layoutY="30" vgap="1" />
        </center>
    </BorderPane>

    <Group fx:id="groupNotification" layoutX="14" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel" />
        </VBox>
    </Group>
    <Label fx:id="scoreLabel" layoutX="224.0" layoutY="61.0" styleClass="scoreStyle" text="Score: 0" textFill="#52b49b" />
    <Label fx:id="highScoreLabel" layoutX="224.0" layoutY="36.0" styleClass="scoreStyle" text="High Score: 0" textFill="beige" />
    <stylesheets>
        <URL value="@window_style.css" />
    </stylesheets>
</Pane>
